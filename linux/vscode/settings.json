{
    "editor.acceptSuggestionOnEnter": "off",
	"editor.fontFamily": "'Fira Mono', 'monospace'", // SF Mono, Fira Mono
    "editor.fontSize": 14,
    "editor.insertSpaces": false,
    "editor.find.seedSearchStringFromSelection": "selection",
    "[rust]": {
        "editor.formatOnSave": true, // rust fmt on save (requires rust-analyzer extension)
    },

    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,

    "terminal.external.linuxExec": "alacritty",
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.integrated.allowChords": false,
    "terminal.integrated.allowMnemonics": true,
    "terminal.integrated.fontFamily": "'Fira Mono', 'Iosevka SS18', 'monospace'",

    "security.workspace.trust.enabled": false,

    "debug.console.fontSize": 12,
    "markdown.preview.fontSize": 12,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },

    "keyboard.dispatch": "keyCode", // X11 custom key bindings fix

    "extensions.ignoreRecommendations": true,

    // EXTENSIONS

    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "unessisary"
    ],
    "editor.foldingMaximumRegions": 50000,

    "glsllint.glslangValidatorArgs": "-V",
    "glsllint.additionalStageAssociations": {
        ".fsh": "frag",
        ".vsh": "vert",
    },

    "errorLens.enabledDiagnosticLevels": [
        "error",
        //"warning",
        //"info",
    ],
    "errorLens.gutterIconsEnabled": true,

    "vim.disableExtension": true,
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.useCtrlKeys": true,

    "todohighlight.keywords": [
        "todo",
        "TODO",
    ],
    "editor.find.cursorMoveOnType": false,
    "errorLens.removeLinebreaks": false,
    "git.autofetch": true,
    "cSpell.maxNumberOfProblems": 1000,
    "explorer.confirmDelete": false,
    "git.confirmSync": false,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "editor.stickyScroll.enabled": true,
    "cmake.configureOnOpen": false,
    "diffEditor.renderSideBySide": false,
    "git.openRepositoryInParentFolders": "never",
    "editor.minimap.enabled": false,
    "git.inputValidation": "off",
    "window.menuBarVisibility": "hidden",
    "errorLens.excludeBySource": [
        "rustc(Click for full compiler diagnostic)"
    ],
    "lldb.suppressUpdateNotifications": true,
    "zig.zls.path": "",
    "zig.zls.checkForUpdate": false,
    "cSpell.enabled": false,
    "zig.zigPath": "/usr/bin/zig",
    "workbench.iconTheme": "file-icons",
    "workbench.editor.empty.hint": "hidden",
    "zig.path": "",
    "mesonbuild.downloadLanguageServer": true,
    "zig.initialSetupDone": true,
    "workbench.colorTheme": "Yet Another Solarized Theme (Light)",

    //"files.associations": {
    //    "*.fsh": "glsl",
    //    "*.vsh": "glsl"
    //},
    // light+ mod:
    //"workbench.colorCustomizations": {
    	//"editor.background": "#f3f3f3",
		//"sideBar.background": "#e8e8e8",
		//"list.hoverBackground": "#dfdfdf",
		//"notebook.cellBorderColor": "#dfdfdf",
		//"editor.rangeHighlightBackground": "#caca003a",
    //},
}
